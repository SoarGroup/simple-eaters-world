sp {simple-RL*propose*rotate
   (state <s> ^name simple-RL
              ^io.input-link.time)
-->
   (<s> ^operator <op> +)
   (<op> ^name rotate)
}

gp {simple-RL*evaluate*rotate
   (state <s> ^name simple-RL
              ^io.input-link <il>
              ^operator <op1> +)
   (<il> ^front [ red wall blue empty green purple ])
 #        ^right [ red wall blue empty green purple ]
 #        ^back [ red wall blue empty green purple ])
   (<op1> ^name rotate)
-->
   (<s> ^operator <op1> = 0.0)
}

sp {apply*rotate
   (state <s> ^operator <op>
              ^io.output-link <out>)
   (<op> ^name rotate)
-->
   (<out> ^rotate <r>)
}
